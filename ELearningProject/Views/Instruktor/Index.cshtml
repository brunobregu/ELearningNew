@model IEnumerable<ELearningProject.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="text-info">Instruktoret ne faqe </h2>
<br />
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Emri)</th>
        <th>@Html.DisplayNameFor(model => model.Mbiemri)</th>
        <th>@Html.DisplayNameFor(model => model.Username)</th>
        <th>@Html.DisplayNameFor(model => model.Password)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Emri)</td>
            <td>@Html.DisplayFor(modelItem => item.Mbiemri)</td>
            <td>@Html.DisplayFor(modelItem => item.Username)</td>
            <td>@Html.DisplayFor(modelItem => item.Password)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>
                <a href="@Url.Action("Modify", "Instruktor")" class="btn btn-primary" id="instruktorModify" data-toggle="tooltip" data-placement="top" title="Modifiko instruktorin">
                    <span>
                        <i class="glyphicon glyphicon-pencil"></i>
                    </span>
                </a>&nbsp;&nbsp;&nbsp;
                <a href="#" class="btn btn-danger" id="instruktorDelete" data-toggle="tooltip" data-placement="top" title="Fshi instruktorin">
                    <span>
                        <i class="glyphicon glyphicon-trash"></i>
                    </span>
                </a>
            </td>
        </tr>
        <div class="modal fade" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h3 class="modal-title">Fshirja e instrukotrit</h3>
                    </div>
                    <div class="media-body">
                        <h4>Jeni te sigurt qe deshironi te fshini kete instruktor ?</h4>
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                        @Html.ActionLink("Fshi", "Delete", "Instruktor", new { id = item.Id }, null)
                    </div>
                </div>
            </div>
        </div>
    }
</table>

<div class="col-lg-12">
    @using (Html.BeginForm("AddInstruktor", "Instruktor", FormMethod.Get))
    {
        <input type="submit" value="Shto kurs" class="btn btn-success" style="margin-bottom:15px" />
    }
</div>



<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $("#instruktorDelete").click(function () {
            $("#myModal").modal('show');
        });

    });
</script>